##
##  CONSTANTS
##
#set($gerar = true)
#if($applicationUseCases)
#if($modulo == 'true')
#set($gerar = false)
#end
#end
#set($actionName = $stringUtils.upperCamelCaseName(${action.getActionClassName()}))
#set ($generatedFile = "${actionName}Action2-validation.xml")
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
"-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<!-- Generated by bpm4struts2/configuration/validator.xml.vsl-->
<validators>
#foreach ($field in $action.actionFormFields)

#if(${field.required} || ${field.type.name}=="Date" || 	${field.type.name}=="int" || ${field.type.name}=="Integer" || 	${field.type.name}=="float" || ${field.type.name}=="Float" ||	${field.type.name}=="double" || ${field.type.name}=="Double" )
	<field name="${field.name}">
#if(${field.required})
	#if(${field.type.name}=="String")
		<field-validator type="requiredstring">
			<message>E necessario informar o usuario</message>
		</field-validator>
		#else
		<field-validator type="required">
			<message>E necessario informar o usuario</message>
		</field-validator>
		#end
	#end
#if(${field.type.name}=="Date")
		<field-validator type="date">
			<message>E necessario informar o usuario</message>
		</field-validator>
#end
#if(${field.type.name}=="int" || ${field.type.name}=="Integer")
		<field-validator type="int">
			<message>E necessario informar o usuario</message>
		</field-validator>
#end
#if(${field.type.name}=="float" || ${field.type.name}=="Float" ||	${field.type.name}=="double" || ${field.type.name}=="Double" )
		<field-validator type="double">
			<message>E necessario informar o usuario</message>
		</field-validator>
	
#end
	</field>
#end
#end
</validators>